{
  "version": "1.0.0-beta3",
  "description": "ASP.NET 5 Roslyn compiler implementation.",
  "compilationOptions": {
    "define": [
      "TRACE"
    ],
    "allowUnsafe": true,
    "warningsAsErrors": true
  },
  "dependencies": {
    "Microsoft.CodeAnalysis.CSharp": "1.0.0-rc1",
    "Microsoft.Framework.Runtime": "1.0.0-beta3",
    "Microsoft.Framework.Runtime.Common": {
      "version": "1.0.0-beta3",
      "type": "build"
    },
    "Microsoft.Framework.Runtime.Interfaces": {
      "version": "1.0.0-beta3",
      "type": "build"
    },
    "Microsoft.Framework.Runtime.Roslyn.Common": {
      "version": "1.0.0-beta3",
      "type": "build"
    }
  },
  "frameworks": {
    "aspnet50": {
      "frameworkAssemblies": {
        "System.IO": "",
        "System.Xml": "",
        "System.Xml.Linq": "",
        "System.Threading.Tasks": "",
        "System.Text.Encoding": ""
      }
    },
    "aspnetcore50": {
      "dependencies": {
        "System.Collections.Concurrent": "4.0.10-beta-22605",
        "System.Resources.ResourceWriter": "4.0.0-beta-22605"
      }
    }
  },
  "scripts": {
    "postbuild": [
      "%project:Directory%/../../build/batchcopy %project:BuildOutputDir%/Debug/aspnet50/*.* %project:Directory%/../../artifacts/build/kre-clr-win-x86/bin",
      "%project:Directory%/../../build/batchcopy %project:BuildOutputDir%/Debug/aspnet50/*.* %project:Directory%/../../artifacts/build/kre-mono/bin",
      "%project:Directory%/../../build/batchcopy %project:BuildOutputDir%/Debug/aspnetcore50/*.* %project:Directory%/../../artifacts/build/kre-coreclr-win-x86/bin"
    ]
  }
}